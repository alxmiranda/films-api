*
  padding: 0
  margin: 0
  box-sizing: border-box

body
  background: $light-secondary

p,
span
  font-family: $font-family
  color: $neutral
  line-height: $line-height
  font-size: $text-size

a,
button
  background: transparent
  border: none
  font-family: $font-family
  font-size: $text-size
  text-decoration: none
  color: $dark
  transition: color .2s
  outline: none

  &:hover,
  &:focus
    cursor: pointer
    color: rgba($dark, .7)
    transition: color .2s

.expand
  display: flex
  justify-content: space-between
  width: 100%

.app
  display: flex
  justify-content: center